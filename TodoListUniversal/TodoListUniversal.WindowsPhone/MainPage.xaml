<Page
    x:Class="TodoListUniversal.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TodoListUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" VerticalAlignment="Top" Orientation="Horizontal">
                <Button Content="Sign In" Command="{Binding Path=SignInCommand}" />
                <Button Content="Sign Out" Command="{Binding Path=SignOutCommand}" Margin="5,0,0,0" />
            </StackPanel>
            <TextBlock Grid.Row="1" Text="{Binding Path=StatusText}" Margin="0,5,0,0" FontSize="24" TextWrapping="Wrap" />
        </Grid>
    </Grid>
</Page>